{
  "buildOptions": {
    "verbose": true
  },
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["esnext"],
    "incremental": true,
    "noImplicitOverride": true,
    "skipLibCheck": true  
  },
  "include": ["./src/**/*"],
  "files": ["src/index.d.ts"]
}